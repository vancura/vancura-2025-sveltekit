{
  "buildCommand": "yarn build",
  "outputDirectory": "build",
  "framework": "sveltekit",
  "installCommand": "yarn install",
  "devCommand": "yarn dev",
  "functions": {
    "src/routes/api/**/*.js": {
      "runtime": "nodejs20.x"
    },
    "src/routes/api/**/*.ts": {
      "runtime": "nodejs20.x"
    }
  },
  "rewrites": [
    {
      "source": "/storybook/(.*)",
      "destination": "/storybook-static/$1"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    },
    {
      "source": "/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
